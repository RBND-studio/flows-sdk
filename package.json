{
  "name": "@flows/monorepo",
  "description": "Flows monorepo",
  "private": true,
  "scripts": {
    "e2e": "pnpm --filter e2e",
    "js": "pnpm --filter js",
    "js-components": "pnpm --filter js-components",
    "react": "pnpm --filter react",
    "react-components": "pnpm --filter react-components",
    "shared": "pnpm --filter shared",
    "tsc": "pnpm -r tsc",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "commitlint": "commitlint --edit",
    "pre-push": "concurrently \"pnpm lint\" \"pnpm test\" \"pnpm tsc\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@vercel/style-guide": "^6.0.0",
    "concurrently": "^9.2.1",
    "eslint": "8.57.1",
    "husky": "^9.1.7",
    "minimist": "^1.2.8",
    "prettier": "^3.6.2"
  },
  "packageManager": "pnpm@10.13.1"
}
