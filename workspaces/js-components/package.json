{
  "name": "@flows/js-components",
  "description": "Built-in components for Flows JS SDK",
  "keywords": [
    "javascript",
    "html",
    "ux",
    "guide",
    "spotlight",
    "popover",
    "overlay",
    "users",
    "saas",
    "onboarding",
    "tour",
    "walkthrough",
    "user-onboarding",
    "feature-introductions",
    "onboarding-tool",
    "product-adoption",
    "product-tours"
  ],
  "version": "2.2.3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RBND-studio/flows-sdk.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --env.NODE_ENV development",
    "build": "tsup --env.NODE_ENV production && node scripts/rename-global-modules.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint src",
    "tsc": "tsc -p tsconfig.json",
    "version": "pnpm version",
    "prepare": "pnpm build"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.1",
    "lit": "^3.3.2"
  },
  "devDependencies": {
    "@flows/js": "workspace:*",
    "@flows/shared": "workspace:*",
    "@flows/styles": "workspace:*",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@flows/js": ">=1.18.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components.d.ts",
      "import": "./dist/components.mjs",
      "require": "./dist/components.js"
    },
    "./tour-components": {
      "types": "./dist/tour-components.d.ts",
      "import": "./dist/tour-components.mjs",
      "require": "./dist/tour-components.js"
    },
    "./index.css": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    }
  }
}
